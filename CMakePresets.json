{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 4,
    "minor": 1,
    "patch": 2
  },
  "configurePresets": [
    {
      "name": "envy-base",
      "hidden": true,
      "displayName": "Envy Base",
      "generator": "Ninja",
      "binaryDir": "out/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "release-lto-on",
      "displayName": "Release (LTO On)",
      "inherits": "envy-base",
      "cacheVariables": {
        "ENABLE_LTO": "ON",
        "ENVY_ENABLE_ASAN": "OFF"
      }
    },
    {
      "name": "release-asan-lto-on",
      "displayName": "Release with ASan (LTO On, Windows only)",
      "inherits": "envy-base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "ENABLE_LTO": "ON",
        "ENVY_ENABLE_ASAN": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release-lto-on",
      "displayName": "Build envy (LTO On)",
      "configurePreset": "release-lto-on",
      "jobs": 0
    },
    {
      "name": "release-asan-lto-on",
      "displayName": "Build envy with ASan (LTO On, Windows only)",
      "configurePreset": "release-asan-lto-on",
      "jobs": 0
    }
  ]
}
