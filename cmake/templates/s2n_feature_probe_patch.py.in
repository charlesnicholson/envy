import pathlib
import re

# Ensure s2n feature probes use aws-lc headers, sanitize generator expressions,
# and avoid injecting raw '$' tokens into Ninja try_compile invocations.

s2n_cmakelists = pathlib.Path(r"@S2N_CMAKELISTS@")
original = s2n_cmakelists.read_text()
text = original

helper_markers = ("# envy s2n probe helpers", "# envy s2n probe helpers v1")
for marker in helper_markers[1:]:
    if marker in text:
        text = text.replace(marker, helper_markers[0], 1)

helper_marker = helper_markers[0]
if helper_marker in text and "envy_s2n_prepare_probe(" in text:
    if text != original:
        s2n_cmakelists.write_text(text)
    raise SystemExit(0)

if helper_marker not in text:
    helper_block = """
# envy s2n probe helpers
if(NOT COMMAND envy_s2n_prepare_probe)
function(envy_s2n_prepare_probe LINK_LIB PROBE_NAME OUT_COMPILE_DEFS OUT_SANITIZED_INCLUDES OUT_LINK_LIBS OUT_SAVED_INCLUDES)
    set(_envy_probe_compile_defs -I "${CMAKE_CURRENT_LIST_DIR}" -include "${CMAKE_CURRENT_LIST_DIR}/utils/s2n_prelude.h" -c ${GLOBAL_FLAGS} ${PROBE_FLAGS}) # envy feature probe include patch helpers
    set(_envy_probe_include_dirs "")
    set(_envy_probe_link_libs "")
    set(_envy_sanitized_includes "")
    set(_envy_probe_link_location "")
    if(TARGET ${LINK_LIB})
        get_target_property(_envy_probe_include_dirs ${LINK_LIB} INTERFACE_INCLUDE_DIRECTORIES)
        get_target_property(_envy_target_type ${LINK_LIB} TYPE)
        get_target_property(_envy_binary_dir ${LINK_LIB} BINARY_DIR)
        get_target_property(_envy_output_name ${LINK_LIB} OUTPUT_NAME)
        if(NOT _envy_output_name)
            set(_envy_output_name ${LINK_LIB})
        endif()
        if(_envy_target_type STREQUAL "STATIC_LIBRARY")
            set(_envy_probe_link_location "${_envy_binary_dir}/${CMAKE_STATIC_LIBRARY_PREFIX}${_envy_output_name}${CMAKE_STATIC_LIBRARY_SUFFIX}")
        elseif(_envy_target_type STREQUAL "SHARED_LIBRARY")
            set(_envy_probe_link_location "${_envy_binary_dir}/${CMAKE_SHARED_LIBRARY_PREFIX}${_envy_output_name}${CMAKE_SHARED_LIBRARY_SUFFIX}")
        elseif(_envy_target_type STREQUAL "MODULE_LIBRARY")
            set(_envy_probe_link_location "${_envy_binary_dir}/${CMAKE_SHARED_LIBRARY_PREFIX}${_envy_output_name}${CMAKE_SHARED_LIBRARY_SUFFIX}")
        endif()
        if(_envy_probe_link_location AND EXISTS "${_envy_probe_link_location}")
            list(APPEND _envy_probe_link_libs "${_envy_probe_link_location}")
        endif()
    endif()
    if(NOT _envy_probe_include_dirs AND DEFINED crypto_INCLUDE_DIR AND NOT "${crypto_INCLUDE_DIR}" STREQUAL "")
        set(_envy_probe_include_dirs "${crypto_INCLUDE_DIR}")
    endif()
    set(_envy_probe_had_include FALSE)
    if(_envy_probe_include_dirs)
        foreach(_envy_crypto_dir IN LISTS _envy_probe_include_dirs)
            set(_envy_clean_dir "${_envy_crypto_dir}")
            if(DEFINED ENV{ENVY_DEBUG_S2N_PROBES})
                file(APPEND "${CMAKE_BINARY_DIR}/envy_s2n_probe_debug.log" "checking=${_envy_clean_dir}\n")
            endif()
            if("${_envy_clean_dir}" MATCHES "^\\$<\\$<BOOL:[^>]+>:\\$<BUILD_INTERFACE:([^>]+)>>$")
                set(_envy_clean_dir "${CMAKE_MATCH_1}")
            elseif("${_envy_clean_dir}" MATCHES "^\\$<BUILD_INTERFACE:([^>]+)>$")
                set(_envy_clean_dir "${CMAKE_MATCH_1}")
            elseif("${_envy_clean_dir}" MATCHES "\\$<INSTALL_INTERFACE:([^>]+)>")
                set(_envy_clean_dir "")
            elseif("${_envy_clean_dir}" MATCHES "^\\$<")
                set(_envy_clean_dir "")
            endif()
            if(_envy_clean_dir AND NOT EXISTS "${_envy_clean_dir}")
                set(_envy_clean_dir "")
            endif()
            if(DEFINED ENV{ENVY_DEBUG_S2N_PROBES})
                file(APPEND "${CMAKE_BINARY_DIR}/envy_s2n_probe_debug.log" "orig=${_envy_crypto_dir} clean=${_envy_clean_dir}\n")
            endif()
            if(_envy_clean_dir)
                list(APPEND _envy_probe_compile_defs -I "${_envy_clean_dir}")
                list(APPEND _envy_sanitized_includes "${_envy_clean_dir}")
                set(_envy_probe_had_include TRUE)
            endif()
        endforeach()
    endif()
    if(NOT _envy_probe_had_include)
        set(_envy_probe_fallback "${CMAKE_CURRENT_LIST_DIR}/../aws-lc/include")
        if(EXISTS "${_envy_probe_fallback}/openssl/evp.h")
            list(APPEND _envy_probe_compile_defs -I "${_envy_probe_fallback}")
            list(APPEND _envy_sanitized_includes "${_envy_probe_fallback}")
            set(_envy_probe_had_include TRUE)
        endif()
    endif()
    list(FILTER _envy_probe_compile_defs EXCLUDE REGEX "\\$<")
    foreach(_envy_def IN LISTS _envy_probe_compile_defs)
        if(_envy_def MATCHES "\\$<")
            message(FATAL_ERROR "s2n feature probe sanitizer missed generator expression: ${_envy_def}")
        endif()
    endforeach()
    if(NOT _envy_probe_link_libs)
        list(APPEND _envy_probe_link_libs ${LINK_LIB})
    endif()
    if(TARGET ${LINK_LIB})
        if(DEFINED _envy_sanitized_includes AND _envy_sanitized_includes)
            list(REMOVE_DUPLICATES _envy_sanitized_includes)
        endif()
        get_target_property(_envy_saved_includes ${LINK_LIB} INTERFACE_INCLUDE_DIRECTORIES)
        if(DEFINED _envy_sanitized_includes AND _envy_sanitized_includes)
            set_target_properties(${LINK_LIB} PROPERTIES INTERFACE_INCLUDE_DIRECTORIES "${_envy_sanitized_includes}")
        endif()
    else()
        set(_envy_saved_includes "")
    endif()
    if(DEFINED ENV{ENVY_DEBUG_S2N_PROBES})
        file(APPEND "${CMAKE_BINARY_DIR}/envy_s2n_probe_debug.log" "${PROBE_NAME}: defs=${_envy_probe_compile_defs} includes=${_envy_sanitized_includes} link=${_envy_probe_link_libs}\n")
    endif()
    set(${OUT_COMPILE_DEFS} "${_envy_probe_compile_defs}" PARENT_SCOPE)
    set(${OUT_SANITIZED_INCLUDES} "${_envy_sanitized_includes}" PARENT_SCOPE)
    set(${OUT_LINK_LIBS} "${_envy_probe_link_libs}" PARENT_SCOPE)
    set(${OUT_SAVED_INCLUDES} "${_envy_saved_includes}" PARENT_SCOPE)
endfunction()

function(envy_s2n_restore_probe LINK_LIB SAVED_INCLUDES)
    if(TARGET ${LINK_LIB})
        if("${SAVED_INCLUDES}" STREQUAL "" OR "${SAVED_INCLUDES}" STREQUAL "NOTFOUND")
            set_target_properties(${LINK_LIB} PROPERTIES INTERFACE_INCLUDE_DIRECTORIES "")
        else()
            set_target_properties(${LINK_LIB} PROPERTIES INTERFACE_INCLUDE_DIRECTORIES "${SAVED_INCLUDES}")
        endif()
    endif()
endfunction()
endif()

"""
    helper_anchor = re.search(r"(?m)^function\(feature_probe PROBE_NAME\)", text)
    if not helper_anchor:
        raise RuntimeError("failed to locate s2n_add_features for helper insertion")
    insert_at = helper_anchor.start()
    text = text[:insert_at] + helper_block + text[insert_at:]


replacement = """    # Try to compile the probe with the given flags
    envy_s2n_prepare_probe(${LINK_LIB} ${PROBE_NAME} _envy_probe_compile_defs _envy_sanitized_includes _envy_probe_link_libs _envy_saved_includes) # envy feature probe include patch
    try_compile(
        IS_AVAILABLE
        ${CMAKE_BINARY_DIR}
        SOURCES "${CMAKE_CURRENT_LIST_DIR}/tests/features/${PROBE_NAME}.c"
        LINK_LIBRARIES ${_envy_probe_link_libs} ${OS_LIBS}
        CMAKE_FLAGS ${ADDITIONAL_FLAGS}
        COMPILE_DEFINITIONS ${_envy_probe_compile_defs}
        ${ARGN}
        OUTPUT_VARIABLE TRY_COMPILE_OUTPUT
    )
    envy_s2n_restore_probe(${LINK_LIB} "${_envy_saved_includes}")
    unset(_envy_probe_compile_defs)
    unset(_envy_probe_link_libs)
    unset(_envy_sanitized_includes)
    unset(_envy_saved_includes)

"""

legacy_pattern = re.compile(
    r"    set\(_envy_probe_compile_defs[^#]*# envy feature probe include patch[^\n]*\n"
    r".*?"
    r"    unset\(_envy_probe_link_location\)\n",
    re.DOTALL,
)

patched = False
simple_pattern = re.compile(
    r"    # Try to compile the probe with the given flags\n"
    r"    try_compile\(\n"
    r"(?:        .*\n)+?"
    r"    \)\n",
    re.MULTILINE,
)

match_simple = simple_pattern.search(text)
if match_simple:
    text = text[:match_simple.start()] + replacement + text[match_simple.end():]
    patched = True

probe_patch_pattern = re.compile(
    r"    set\(_envy_probe_compile_defs -I \"\${CMAKE_CURRENT_LIST_DIR}\" -include \"\${CMAKE_CURRENT_LIST_DIR}/utils/s2n_prelude.h\" -c \${GLOBAL_FLAGS} \${PROBE_FLAGS}\) # envy feature probe include patch[^\n]*\n"
    r"(?:    .*\n)*?"
    r"    unset\(_envy_probe_compile_defs\)\n",
    re.DOTALL,
)

if not patched:
    match_probe_patch = probe_patch_pattern.search(text)
    if match_probe_patch:
        text = text[:match_probe_patch.start()] + replacement + text[match_probe_patch.end():]
        patched = True

if not patched:
    match = legacy_pattern.search(text)
    if match:
        text = text[:match.start()] + replacement + text[match.end():]
        patched = True

if not patched:
    raise RuntimeError("s2n feature probe block not found")

s2n_cmakelists.write_text(text)
